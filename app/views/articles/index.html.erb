<h2>Lista de articulos</h2>

<%= link_to "Crear nuevo",new_article_path %>

<table>
  <thead>
  <tr>
    <th>
      Titulo
    </th>
    <th>
      Description
    </th>
  </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
        <td><%= link_to 'Editar',edit_article_path(article) %></td>
        <td><%= link_to 'Ver',article_path(article)%></td>
        <td><%= link_to 'Borrar',article_path(article), method: :delete, data: {confirm: 'Esta seguro?'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>
